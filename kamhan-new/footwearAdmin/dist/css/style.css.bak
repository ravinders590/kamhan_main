

.brand-link .brand-image {
    float: none;
    max-height: 50px;
  }
.content-wrapper {
    padding: 15px 25px;
}
form.manage-password-form {
    margin-top: 20px;
}
.all-categorie-table {
    margin-top: 30px;
}
.all-categorie-table table tbody td a {
    padding: 0 10px;
}
ul.category-list-type {
    padding: 0;
    list-style-type: none;
}
.category-list-type {
	margin-top: 10px;
}
.category-list-type li {
	margin: 5px;
    display: inline-block;
}
.category-list-type li a {
    color: #fff;
    background: #007bff;
    padding: 10px;
    border-radius: 5px;
    display: block;
}
.category-list-type li:hover {
	opacity: 0.8;
}
.layout-fixed .main-sidebar {
	background: #FE0000;
}
[class*=sidebar-dark] .brand-link {
	border-bottom: 1px solid #fff!important;
}
.sidebar-dark-primary .nav-sidebar>.nav-item>.nav-link.active, 
.sidebar-light-primary .nav-sidebar>.nav-item>.nav-link.active {
	background-color: #eeeeee;
	color: #000!important;
}

fieldset.fieldset {
    padding: 10px;
    border: 1px solid;
    margin: 0;
}

fieldset.fieldset legend {
    display: inline-block;
    width: auto;
    padding: 0 7px;
    font-size: 18px;
}
.actions a {
    font-size: 17px;
    margin-right: 10px;
}

.actions a:last-child {
    margin-right: 0;
}
.datatable-set td img {
    width: 60px;
}
table.dataTable>tbody>tr.child ul.dtr-details {
    display: block !important;
}

table.dataTable>tbody>tr.child ul.dtr-details li {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
}
span.name {
    height: 30px;
    width: 30px;
    background-color: #FE0000;
    display: inline-block;
    color: #fff;
    text-align: center;
    line-height: 170%;
    border-radius: 50%;
}
.btn-group-setting button#add_more,.btn-group-setting button#add_less {
    font-size: 20px;
    padding: 2px 10px;
}
.show_image {
    padding: 2px;
    border: 1px solid #ddd;
    width: 110px;
    height: 110px;
    margin-top: 10px;
}

.show_image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}